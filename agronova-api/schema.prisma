datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model AzureADIntegration {
  id                  String  @id @default(cuid())
  adUserId            String  @unique @default("")
  adTenantId          String  @default("")
  roleMapping         String  @default("")
  accessTokenValidity Boolean @default(false)
  loginHistory        String  @default("")
}

model User {
  id              String       @id @default(cuid())
  full_name       String       @default("")
  email           String       @unique @default("")
  phone_number    String       @default("")
  billing_plan_id BillingPlan? @relation("BillingPlan_user")
  ranch_id        Ranch?       @relation("User_ranch_id", fields: [ranch_idId], references: [id])
  ranch_idId      String?      @map("ranch_id")
  crops           Crop[]       @relation("Crop_users")
  profile_picture String       @default("")
  role            String?      @default("crop_worker")
  accountStatus   String?      @default("false")

  @@index([ranch_idId])
}

model Irrigation {
  id         String   @id @default(cuid())
  crop_id    Crop?    @relation("Irrigation_crop_id", fields: [crop_idId], references: [id])
  crop_idId  String?  @map("crop_id")
  start_time DateTime @default(now())
  end_time   DateTime @default(now())
  scheduled  Boolean  @default(false)

  @@index([crop_idId])
}

model Crop {
  id         String       @id @default(cuid())
  crop_name  String       @default("")
  location   String       @default("")
  latitude   Float
  longitude  Float
  users      User[]       @relation("Crop_users")
  ranch_id   Ranch?       @relation("Crop_ranch_id", fields: [ranch_idId], references: [id])
  ranch_idId String?      @map("ranch_id")
  statistic  Statistic[]  @relation("Statistic_crop_id")
  irrigation Irrigation[] @relation("Irrigation_crop_id")
  crop_media CropMedia[]  @relation("CropMedia_crop_id")
  device     Device?      @relation("Crop_device", fields: [deviceId], references: [id])
  deviceId   String?      @unique @map("device")
  isDeleted  Boolean      @default(false)

  @@index([ranch_idId])
}

model Statistic {
  id              String   @id @default(cuid())
  crop_id         Crop?    @relation("Statistic_crop_id", fields: [crop_idId], references: [id])
  crop_idId       String?  @map("crop_id")
  timestamp       DateTime @default(now())
  soil_moisture   Float?
  air_humidity    Float
  air_temperature Float

  @@index([crop_idId])
}

model BillingPlan {
  id                String        @id @default(cuid())
  billing_plan_name String        @default("")
  description       String        @default("")
  cost              Float
  user              User?         @relation("BillingPlan_user", fields: [userId], references: [id])
  userId            String?       @unique @map("user")
  feature_plan      FeaturePlan[] @relation("FeaturePlan_billing_plan_id")
}

model FeaturePlan {
  id                String       @id @default(cuid())
  billing_plan_id   BillingPlan? @relation("FeaturePlan_billing_plan_id", fields: [billing_plan_idId], references: [id])
  billing_plan_idId String?      @map("billing_plan_id")
  feature           String       @default("")

  @@index([billing_plan_idId])
}

model CropMedia {
  id         String  @id @default(cuid())
  crop_id    Crop?   @relation("CropMedia_crop_id", fields: [crop_idId], references: [id])
  crop_idId  String? @map("crop_id")
  address    String  @default("")
  media_type String  @default("photo")

  @@index([crop_idId])
}

model Ranch {
  id          String  @id @default(cuid())
  ranch_name  String  @default("")
  description String  @default("")
  user        User[]  @relation("User_ranch_id")
  crop        Crop[]  @relation("Crop_ranch_id")
  isDeleted   Boolean @default(false)
}

model Device {
  id                        String    @id @default(cuid())
  device_name               String    @default("")
  serial_number             String    @unique @default("")
  status                    String?   @default("active")
  iot_hub_connection_string String    @default("")
  crop_id                   Crop?     @relation("Crop_device")
  firmware_version          String    @default("")
  last_communication        DateTime?
  is_deleted                Boolean   @default(false)
}
