datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model AzureADIntegration {
  id                  String  @id @default(cuid())
  adUserId            String  @unique @default("")
  adTenantId          String  @default("")
  roleMapping         String  @default("")
  accessTokenValidity Boolean @default(false)
  loginHistory        String  @default("")
}

model User {
  id                     String  @id @default(cuid())
  fullName               String  @default("")
  email                  String  @default("")
  phoneNumber            String  @default("")
  userRole               String? @default("resident")
  profilePicture         String  @default("")
  accountStatus          String? @default("active")
  adAuthenticationStatus Boolean @default(false)
}

model Irrigation {
  id            String   @id @default(cuid())
  id_irrigation Int
  crop_id       Int
  date          DateTime @default(now())
  duration      Int      @default(0)
}

model LifeCicle {
  id            String @id @default(cuid())
  id_life_cicle Int
  name          String @default("")
}

model Sick {
  id          String @id @default(cuid())
  id_sickness Int
  name        String @default("")
}

model Treatment {
  id            String @id @default(cuid())
  id_treatments Int
  name          String @default("")
}

model crops {
  id          String @id @default(cuid())
  crop_name   String @default("")
  temperature Float?
  humidity    Float?
  ph          Float?
  status      String @default("healthy")
}
